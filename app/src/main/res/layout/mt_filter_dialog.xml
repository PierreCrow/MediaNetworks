<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/mt_shape_dialog"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:weightSum="10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtrar por :"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:textStyle="normal"
                    android:textColor="@color/color_general"
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/rlSeasrch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:padding="0dip"
                    android:background="@drawable/mt_shape_combo_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <Spinner
                            android:id="@+id/spiEstado"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="0dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="-5dp" />



                    </LinearLayout>

                    <ImageView

                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:src="@drawable/mt_arrow_grey_down" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:padding="0dip"
                    android:background="@drawable/mt_shape_combo_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <Spinner
                            android:id="@+id/spiGrupo"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="0dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="-5dp" />



                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnSearhhsch"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:src="@drawable/mt_arrow_grey_down" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de trabajo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="0dip"
                    android:background="@drawable/mt_shape_combo_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <Spinner
                            android:id="@+id/spiTipoTrabajo"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="0dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="-5dp" />



                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnSearhhschh"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:src="@drawable/mt_arrow_grey_down" />

                </RelativeLayout>





                <Button
                    android:id="@+id/btnAply"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/mt_shapebuttogeneral"
                    android:text="Aplicar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />





            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>