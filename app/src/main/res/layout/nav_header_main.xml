<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/color_general"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_FotoEmpresa_Drawer"
            android:paddingTop="5dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logomedia" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorTextClear"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:visibility="gone"

            android:textSize="25dp"

            />



    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/txtNombreUsuario_Drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Hola Wendolin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_marginBottom="0dp"
        android:visibility="visible"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Bienvenido Pierre"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/tv_nombreEmpresa_Drawer"
        android:maxWidth="150dp"
        android:textColor="@color/white"
        android:gravity="left"
        android:textSize="15dp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/txtEmailUsuario_Drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="p@"
        android:visibility="gone"/>

</LinearLayout>